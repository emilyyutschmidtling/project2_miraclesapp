<h1>Posts</h1>

<% @posts.each do |post| %>
  <h2><%= post.user.nickname %>, <%= time_ago_in_words(post.created_at) %></h2>

  <p><%= post.content %></p>

  <%= render "comments/form", :post => post %>

  <% post.comments.each do |comment| %>

    <h6><%= comment.user.nickname %>, <%= time_ago_in_words(comment.created_at) %></h6>
    <p><%= comment.content %></p>
  <% end %>
<% end %>


